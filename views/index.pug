extends layout

block content
    div.content
        p.info Session #{room}

        div#display.display
            .rail
                #puck.puck

        div.controls
            button#toggle.toggle Loading...
            label(for='speed') Speed:
            input#speed.speed(type='range' min='1' max='100' step='1' value='50')

    script(src='/javascripts/emdr-app.js')
    script Commands.connect('#{room}')
