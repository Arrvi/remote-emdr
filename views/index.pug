extends layout

block content
    div.content
        p.info Session #{room}

        div#display.display
            .rail
                #puck.puck

        div.controls
            button#toggle.toggle Loading...
            label(for='speed') Speed:
            input#speed.speed(type='range' min='1' max='100' step='1' value='50')

    audio#click-left(src='/media/ClickLeft.mp3' preload='auto')
    audio#click-right(src='/media/ClickRight.mp3' preload='auto')
    script(src='/javascripts/emdr-app.js')
    script Commands.connect('#{room}')
